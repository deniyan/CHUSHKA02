@model IEnumerable<InputOrderModel>

<main class="mt-3 mb-5">
    <h1 class="text-center">All Orders</h1>
    <hr class="hr-2 bg-dark" />
    <div class="d-flex justify-content-center">
        <table class="table w-75 table-hover">
            <thead>
                <tr class="row justify-content-center">
                    <th class="col-md-1 text-left">#</th>
                    <th class="col-md-4 text-left">Order ID</th>
                    <th class="col-md-2 text-left">Customer</th>
                    <th class="col-md-2 text-left">Product</th>
                    <th class="col-md-2 text-left">Ordered On</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var counter = 1;
                }
                @foreach (var order in Model)
                {
                    <tr class="row justify-content-center">
                        <td class="col-md-1">@counter</td>
                        <td class="col-md-4">@order.Id</td>
                        <td class="col-md-2">@order.AppUserId</td>
                        <td class="col-md-2">@order.ProductId</td>
                        <td class="col-md-2">@order.OrderedOn.ToString("HH:mm dd/MM/yyyy")</td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</main>
