@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="mt-3">
    <main class="mt-3">
        <h1 class="text-center">Register</h1>
        <hr class="bg-secondary half-width" />
        <form class="mx-auto half-width" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Username</label>
                <input asp-for="Input.UserNamee" class="form-control" placeholder="Username...">
                <span asp-validation-for="Input.UserNamee" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Email...">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Input.Password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>ConfirmPassword</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Password...">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName">Full name</label>
                <input asp-for="Input.FullName" class="form-control" placeholder="FullName...">
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button id="login-submit" type="submit" class="btn chushka-bg-color">Register</button>
            </div>

        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
