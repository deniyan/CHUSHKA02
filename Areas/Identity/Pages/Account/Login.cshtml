@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="mt-3">
    <main class="mt-3">
        <h1 class="text-center">Login</h1>
        <hr class="bg-secondary half-width" />
        <form class="mx-auto half-width" id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="username">Email</label>
                <input asp-for="Input.Email"  class="form-control" id="Email" placeholder="Email...">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Input.Password"  class="form-control" id="password" placeholder="Password...">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button id="login-submit" type="submit" class="btn chushka-bg-color">Login</button>
            </div>
        </form>
    </main>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
